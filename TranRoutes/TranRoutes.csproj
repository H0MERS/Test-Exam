  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Input.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Input.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
